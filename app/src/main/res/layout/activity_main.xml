<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csusm.didhofsas.wtfis.MainActivity">

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/homeunitview"
        android:layout_marginTop="29dp"
        android:id="@+id/number_input"
        android:text="1" />


    <TextView
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/number_input"
        android:layout_marginLeft="5dp"
         />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/reload_button"
        android:src="@drawable/rbutton"
        android:background="#00000000"
        />

    <RadioGroup android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="12dp"
        android:id="@+id/r1">


        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton1"
            android:layout_alignLeft="@+id/radioButton1"
            android:layout_alignStart="@+id/radioButton1"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton2"
            android:layout_alignRight="@+id/radioButton2"
            android:layout_alignEnd="@+id/radioButton2"
            android:id="@+id/radioButton3" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton3"
            android:layout_alignRight="@+id/radioButton3"
            android:layout_alignEnd="@+id/radioButton3"
            android:id="@+id/radioButton4" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton4"
            android:layout_alignLeft="@+id/radioButton4"
            android:layout_alignStart="@+id/radioButton4"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton5"
            android:layout_alignLeft="@+id/radioButton5"
            android:layout_alignStart="@+id/radioButton5"
            android:id="@+id/radioButton6" />
        </RadioGroup>

    <TextView
            android:text="To:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/number_output"
            android:layout_alignStart="@+id/number_output"
            android:layout_marginLeft="5dp"
            android:id="@+id/textView6" />

    <RadioGroup
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/r1"
        android:layout_alignLeft="@+id/number_output"
        android:layout_alignStart="@+id/number_output">
   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
       android:layout_marginRight="30dp"
       android:layout_marginEnd="30dp"
       android:id="@+id/radioButton7" />

   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/radioButton7"
       android:layout_alignRight="@+id/radioButton7"
       android:layout_alignEnd="@+id/radioButton7"
       android:id="@+id/radioButton8" />

   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/radioButton8"
       android:layout_alignLeft="@+id/radioButton8"
       android:layout_alignStart="@+id/radioButton8"
       android:id="@+id/radioButton9" />

   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/radioButton9"
       android:layout_alignRight="@+id/radioButton9"
       android:layout_alignEnd="@+id/radioButton9"
       android:id="@+id/radioButton10" />

   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/radioButton10"
       android:layout_alignLeft="@+id/radioButton10"
       android:layout_alignStart="@+id/radioButton10"
       android:id="@+id/radioButton11" />

   <RadioButton
       android:text="RadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/radioButton11"
       android:layout_alignRight="@+id/radioButton11"
       android:layout_alignEnd="@+id/radioButton11"
       android:id="@+id/radioButton12" />
   </RadioGroup>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unitInput"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/travelunitview"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/reload_button"
        android:layout_toStartOf="@+id/reload_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeunitview"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/r1"
        android:layout_alignEnd="@+id/r1" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/reload_button"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/change_country_button"
        android:src="@drawable/earth"
        android:background="#00000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number_output"
        android:layout_alignBaseline="@+id/number_input"
        android:layout_alignBottom="@+id/number_input"
        android:layout_toRightOf="@+id/number_input"
        android:layout_toEndOf="@+id/number_input"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />


</RelativeLayout>
